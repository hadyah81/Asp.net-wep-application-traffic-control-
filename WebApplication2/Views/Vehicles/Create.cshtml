                <input asp-for="VehicleNationality" class="form-control" />
                <span asp-validation-for="VehicleNationality" class="text-danger"></span></a>
            </div>
             <hr />
            <div class="form-group">
                <a class="btn btn-outline-primary btn-sm mb-0 me-3">
                <label asp-for="Model" class="control-label"></label></a>
                <a class="btn btn-outline-primary btn-sm mb-0 me-3">
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span></a>
            </div>
            <hr />
            <div class="form-group">
                <a class="btn btn-outline-primary btn-sm mb-0 me-3">
                <label asp-for="Color" class="control-label"></label></a>
                <a class="btn btn-outline-primary btn-sm mb-0 me-3">
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span></a>
            </div>
            <hr />
            <div class="form-group">
                <a class="btn btn-outline-primary btn-sm mb-0 me-3">
