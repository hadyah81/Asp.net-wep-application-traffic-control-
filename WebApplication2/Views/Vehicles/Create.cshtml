                <span asp-validation-for="RegistrationStatus" class="text-danger"></span></a>
            </div>
            <hr />
            <div class="form-group">
                <a class="btn btn-outline-primary btn-sm mb-0 me-3">
                <label asp-for="VehicleCategory" class="control-label"></label>
                </a>
                <a class="btn btn-outline-primary btn-sm mb-0 me-3">
                <input asp-for="VehicleCategory" class="form-control" />
                <span asp-validation-for="VehicleCategory" class="text-danger"></span>
                </a>
            </div>
             <hr />
            <div class="form-group">
                <a class="btn btn-outline-primary btn-sm mb-0 me-3">
                <label asp-for="VehicleType" class="control-label"></label>
                </a>
                <a class="btn btn-outline-primary btn-sm mb-0 me-3">
                <input asp-for="VehicleType" class="form-control" />
